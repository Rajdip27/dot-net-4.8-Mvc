@model IEnumerable<WebAppMvcProject.ViewModel.StudentInfoVM>
@{
    ViewBag.Title = "Index";
}
@section styles{

    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">}


<div class="card mt-5">
    <div class="card-header">
       <h4 class="text-center">Student Information List</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-responsive text-center mt-4" id="tblStudentInfo">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Id)</th>
                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Phone)</th>
                    <th>@Html.DisplayNameFor(x => x.Address)</th>
                    <th>@Html.DisplayNameFor(x => x.Email)</th>
                    <th>@Html.DisplayNameFor(x => x.Age)</th>
                    <th><span>Action</span></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.Id)</td>
                        <td>@Html.DisplayFor(x => item.Name)</td>
                        <td>@Html.DisplayFor(x => item.Phone)</td>
                        <td>@Html.DisplayFor(x => item.Address)</td>
                        <td>@Html.DisplayFor(x => item.Email)</td>
                        <td>@Html.DisplayFor(x => item.Age)</td>
                        <td>
                            @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-sm btn-success" })
                            | @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = " btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to delete this item?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section scripts{

    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>

    <script>

        $(document).ready(function () {

            new DataTable("#tblStudentInfo");
        });
    </script>
}
