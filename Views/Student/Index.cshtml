@model IEnumerable<WebAppMvcProject.ViewModel.StudentInfoVM>
@{
    ViewBag.Title = "Index";
    int IdNo = 1;
}
@section styles{

    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
}


<div class="card mt-5">
    <div class="card-header">
        <h4 class="text-center">Student Information List</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-responsive text-center mt-4 table-striped" id="tblStudentInfo">
            <a href="@Url.Action("StudentReport", "Student")" class=" btn btn-sm btn-outline-success ">
                <i class="fa-solid fa-print"></i>
            </a>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Id)</th>
                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Phone)</th>
                    <th>@Html.DisplayNameFor(x => x.Address)</th>
                    <th>@Html.DisplayNameFor(x => x.Email)</th>
                    <th>@Html.DisplayNameFor(x => x.Age)</th>
                    <th>
                        <span>Action</span>
                        <a href="@Url.Action("Create","Student")" class="btn btn-sm btn-success float-end"><i class="fa-solid fa-plus">Create Student</i></a>
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@IdNo</td>
                        <td>@Html.DisplayFor(x => item.Name)</td>
                        <td>@Html.DisplayFor(x => item.Phone)</td>
                        <td>@Html.DisplayFor(x => item.Address)</td>
                        <td>@Html.DisplayFor(x => item.Email)</td>
                        <td>@Html.DisplayFor(x => item.Age)</td>
                        <td>


                            <a href="@Url.Action("Edit", "Student", new {id=item.Id})" class="btn btn-primary btn-sm">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a> |
                            <a href="@Url.Action("Delete", "Delete", new {id=item.Id})" class=" btn btn-sm btn-danger " onclick="return confirm('Are you sure you want to delete this item?');">
                                <i class="fa-solid fa-trash"></i>
                            </a> | 
                            <a href="@Url.Action("StudentsingleReport", "Student", new { id = item.Id })" class="btn btn-sm btn-outline-success">
                            <i class="fa-solid fa-print"></i>
                        </a>
                        </td>
                    </tr>
                    IdNo++;
                }
            </tbody>
        </table>
    </div>
</div>


@section scripts{

    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>

    <script>

        $(document).ready(function () {

            new DataTable("#tblStudentInfo");
        });
    </script>
}
